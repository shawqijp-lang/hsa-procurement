  .nav-active-yellow svg {
    color: #1f2937 !important;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1)) !important;
  }

/* ===============================================
   PWA Native App Enhancement Styles
   =============================================== */

/* Main app container for native appearance */
.hsa-native-app {
  -webkit-user-select: none !important;
  -webkit-touch-callout: none !important;
  -webkit-tap-highlight-color: transparent !important;
  overscroll-behavior: none;
  -webkit-overflow-scrolling: touch;
  -webkit-app-region: no-drag;
}

/* Disable text selection globally except for inputs */
.hsa-native-app * {
  -webkit-touch-callout: none !important;
  -webkit-user-select: none !important;
  -moz-user-select: none !important;
  -ms-user-select: none !important;
  user-select: none !important;
}

/* Allow text selection only in interactive elements */
.hsa-native-app input,
.hsa-native-app textarea,
.hsa-native-app [contenteditable="true"] {
  -webkit-user-select: text !important;
  -moz-user-select: text !important;
  -ms-user-select: text !important;
  user-select: text !important;
  -webkit-touch-callout: default !important;
}

/* Hide browser notifications and context menus */
.hsa-native-app [role="status"]:not([data-keep]),
.hsa-native-app [aria-live="polite"]:not([data-keep]),
.hsa-native-app .notification:not([data-keep]) {
  opacity: 0 !important;
  visibility: hidden !important;
  height: 0 !important;
  overflow: hidden !important;
}

/* Enhanced standalone mode appearance */
@media all and (display-mode: standalone) {
  .hsa-native-app {
    padding-top: env(safe-area-inset-top, 20px);
    padding-bottom: env(safe-area-inset-bottom, 20px);
  }
  
  /* Status bar area styling */
  .hsa-native-app::before {
    content: '';
    position: fixed;
