    animation: slideInAndScale 0.3s cubic-bezier(0.16, 1, 0.3, 1) !important;
  }

  [data-radix-toast-root][data-state="closed"] {
    animation: slideOutAndScale 0.3s cubic-bezier(0.4, 0, 1, 1) !important;
  }

