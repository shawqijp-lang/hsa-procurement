@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Arabic:wght@300;400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Professional Scrollbar Styling */
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

/* تحسينات PWA للمظهر الأصلي */
.hsa-native-app {
  -webkit-user-select: none !important;
  -webkit-touch-callout: none !important;
  -webkit-tap-highlight-color: transparent !important;
  overflow-x: hidden !important;
}

/* إخفاء إشعارات URL في Chrome */
.hsa-native-app [data-notification-url],
.hsa-native-app .notification-url,
.hsa-native-app .chrome-notification-url {
  display: none !important;
  visibility: hidden !important;
}

/* Disable browser translation features */
body, html, div, span, p, h1, h2, h3, h4, h5, h6 {
  translate: no !important;
}

/* Hide Microsoft Edge translate features */
.translator-popup,
.translate-bar,
.translate-notification,
[data-translate],
.edge-translate,
[data-microsoft-translator] {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
}

/* تحسين وضع Standalone */
@media (display-mode: standalone) {
  body {
    -webkit-user-select: none !important;
    -webkit-touch-callout: none !important;
    overscroll-behavior: none !important;
  }
  
  html {
    overscroll-behavior: none !important;
  }
}

/* Enhanced Navigation Animations */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-5px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* COMPREHENSIVE SELECT DROPDOWN FIX - العلاج الشامل للقوائم المنسدلة */

/* 1. أولوية عالية - إعادة تعريف متغيرات CSS الأساسية */
:root {
  --popover: 255 255 255; /* أبيض صلب */
  --popover-foreground: 31 41 55; /* رمادي غامق */
  --accent: 251 191 36; /* أصفر العلامة التجارية */
  --accent-foreground: 31 41 55; /* رمادي غامق */
}

/* 2. تجاوز جذري لجميع عناصر Radix UI Select */
[data-radix-select-content],
[data-radix-popper-content-wrapper],
.radix-select-content {
  background: #ffffff !important;
  background-color: #ffffff !important;
  border: 2px solid #d1d5db !important;
  border-radius: 8px !important;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
  z-index: 99999 !important;
  min-width: 220px !important;
  max-height: 320px !important;
  overflow-y: auto !important;
  backdrop-filter: none !important;
  opacity: 1 !important;
}

[data-radix-select-item],
.radix-select-item {
  background: #ffffff !important;
  background-color: #ffffff !important;
  color: #1f2937 !important;
  padding: 16px 20px !important;
  font-weight: 500 !important;
  font-size: 14px !important;
  line-height: 1.5 !important;
  border-bottom: 1px solid #f3f4f6 !important;
  transition: all 0.2s ease !important;
  cursor: pointer !important;
  opacity: 1 !important;
  display: flex !important;
  align-items: center !important;
}

[data-radix-select-item]:hover,
[data-radix-select-item][data-highlighted],
[data-radix-select-item]:focus,
[data-radix-select-item][data-state="checked"] {
  background: #fbbf24 !important;
  background-color: #fbbf24 !important;
  color: #1f2937 !important;
  outline: none !important;
  opacity: 1 !important;
}

/* 3. CSS Classes المخصصة للاستخدام المباشر */
.select-content-solid {
  background: #ffffff !important;
  background-color: #ffffff !important;
  border: 2px solid #d1d5db !important;
  border-radius: 8px !important;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
  z-index: 99999 !important;
  opacity: 1 !important;
}

.select-item-solid {
  background: #ffffff !important;
  background-color: #ffffff !important;
  color: #1f2937 !important;
  padding: 16px 20px !important;
  font-weight: 500 !important;
  opacity: 1 !important;
  border-bottom: 1px solid #f3f4f6 !important;
  transition: all 0.2s ease !important;
}

.select-item-solid:hover,
.select-item-solid[data-highlighted],
.select-item-solid:focus {
  background: #fbbf24 !important;
  background-color: #fbbf24 !important;
  color: #1f2937 !important;
}

/* 4. إصلاح شامل لمشاكل الشفافية المعروفة */
.bg-popover {
  background: #ffffff !important;
  background-color: #ffffff !important;
}

.text-popover-foreground {
  color: #1f2937 !important;
}

/* 5. إصلاح Portal و Viewport */
[data-radix-select-viewport] {
  background: #ffffff !important;
  padding: 4px !important;
}

/* 6. تجاوز أي شفافية محتملة */
.select-trigger-solid {
  background: #ffffff !important;
  border: 2px solid #d1d5db !important;
  border-radius: 8px !important;
}

